# ShellCheck configuration for Mac Developer Setup
# https://www.shellcheck.net/wiki/

# Disable specific warnings that are acceptable for our use case
disable=SC2034  # Variable appears unused (common in sourced scripts)
disable=SC1091  # Not following sourced files (external scripts)
disable=SC2086  # Double quote to prevent globbing (acceptable in some contexts)
disable=SC2181  # Check exit code directly with e.g. 'if mycmd;' (personal preference)

# Enable additional checks
enable=add-default-case
enable=avoid-nullary-conditions
enable=check-unassigned-uppercase
enable=deprecate-which
enable=quote-safe-variables
enable=require-variable-braces

# External sources (don't follow these)
external-sources=true